html
body
  min-height 100%

body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background linear-gradient(top, #E9E9E9, #fff)
  background #E9E9E9
  background-image url("/img/olympicRings.png"), -webkit-gradient(linear, left top, left bottom, from(#FFF), to(#E9E9E9)) /* Saf4+, Chrome */
  background-image url("/img/olympicRings.png"), -webkit-linear-gradient(top, #FFF, #E9E9E9) /* Chrome 10+, Saf5.1+ */
  background-image url("/img/olympicRings.png"),    -moz-linear-gradient(top, #FFF, #E9E9E9) /* FF3.6+ */
  background-image url("/img/olympicRings.png"),     -ms-linear-gradient(top, #FFF, #E9E9E9) /* IE10 */
  background-image url("/img/olympicRings.png"),      -o-linear-gradient(top, #FFF, #E9E9E9) /* Opera 11.10+ */
  background-image url("/img/olympicRings.png"),         linear-gradient(top, #FFF, #E9E9E9) /* W3C*/
  background-repeat repeat
  background-position 50% 50%

body.mobileui
  width 100%
  height 100%
  background #000
  vertical-align middle
  padding 0
  text-align center

  p
  	display block
  	height 100%
  	color #fff
  	vertical-align middle
  	font 5em "Lucida Grande", Helvetica, Arial, sans-serif

body.mobileui.playing
	background #0f0

	p
		color #000

body.mobileui.gameover
	background #f00

body.mobileui.winner
	background #ff0

	p
		color #000

a
	text-decoration none
	color #00B7FF

h1
	font-size 60px
	font-weight bold
	margin 0 0 30px
	text-shadow 2px 2px 3px white
	text-align center
	color #F00

.mobile h1
	font-size 40px
	color #F00

.controls
	width 75%
	margin 0 auto
    box-orient horizontal
    box-align center
    box-pack center
    border-radius 5px
	display box

.controls a
	text-decoration none
	display block
	padding 40% 10%
	width 45%
	margin 2.5% 10% 0 0
	color #252525
	text-align center
	background linear-gradient(top, #fcfcfc, #bada55)
	box-shadow 0 40px 46px -6px #ccc
	border-radius 10px
	border 1px solid #ebebeb
	font-size 18px
	text-shadow 1px 1px 2px #ccc

.left, .right
	display: none

.home
	text-align center
	width 45%
	margin 0 auto
	
	p
		font-size 24px
		margin 0 0 30px
		text-shadow 2px 2px 3px white
		color	#F00

	img
		box-shadow 0 40px 46px -6px #ccc
		border 1px solid #fcfcfc

.race
	p
		font-size 24px
		margin 0 0 30px
		text-shadow 2px 2px 3px white
		text-align center

	canvas
		box-shadow 0 40px 46px -6px #ccc
		border 1px solid #fcfcfc
		margin 0 auto
		display block

	.racers

		margin 2em auto
		width 50%

		ol
			list-style-type bullet

			li
				text-align left
				margin 2em 0

			img
				vertical-align middle